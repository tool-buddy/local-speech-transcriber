<Window x:Class="ToolBuddy.LocalSpeechTranscriber.Presentation.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.macicrosoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:domain="clr-namespace:ToolBuddy.LocalSpeechTranscriber.Domain;assembly=ToolBuddy.LocalSpeechTranscriber.Domain"
        mc:Ignorable="d"
        Title="{Binding ProductName}" Height="120" Width="260">

    <Window.Resources>
        <SolidColorBrush x:Key="BtnReadyBrush" Color="#FFADFFB0" />
        <SolidColorBrush x:Key="BtnRecordingBrush" Color="#FFFFAAA4" />
        <SolidColorBrush x:Key="BtnInitializingBrush" Color="#FF9E9E9E" />
    </Window.Resources>

    <Window.TaskbarItemInfo>
        <TaskbarItemInfo />
    </Window.TaskbarItemInfo>

    <Button Margin="10,10,10,10" Padding="10" Command="{Binding ToggleRecordingCommand}" FontSize="16" FontWeight="Bold" BorderThickness="0,0,0,0">
        <Button.Style>
            <Style TargetType="Button">
                <Setter Property="Background" Value="{StaticResource BtnReadyBrush}" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding RecordingState}" Value="{x:Static domain:RecordingState.Recording}">
                        <Setter Property="Background" Value="{StaticResource BtnRecordingBrush}" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding RecordingState}" Value="{x:Static domain:RecordingState.Initializing}">
                        <Setter Property="Background" Value="{StaticResource BtnInitializingBrush}" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Button.Style>
        <TextBlock Text="{Binding RecordButtonText}" />
    </Button>
</Window>
