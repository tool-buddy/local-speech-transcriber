<Window x:Class="ToolBuddy.LocalSpeechTranscriber.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:domain="clr-namespace:ToolBuddy.LocalSpeechTranscriber.Domain"
        mc:Ignorable="d"
        Title="Whisper Dictation" Height="300" Width="500">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo />
    </Window.TaskbarItemInfo>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Margin="10" Padding="10" Command="{Binding ToggleRecordingCommand}">
            <StackPanel Orientation="Horizontal">
                <Image Height="16" Width="16" Margin="0,0,5,0">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Source" Value="pack://application:,,,/Assets/not-recording.png" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RecordingState}" Value="{x:Static domain:RecordingState.Recording}">
                                    <Setter Property="Source" Value="pack://application:,,,/Assets/recording.png" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
                <TextBlock Text="{Binding RecordButtonText}" />
            </StackPanel>
        </Button>

        <TextBlock Grid.Row="1" Text="{Binding StatusText}" Margin="10" HorizontalAlignment="Center" />

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <TextBlock Text="{Binding TranscriptionText}" Margin="10" TextWrapping="Wrap" />
        </ScrollViewer>
    </Grid>
</Window>
